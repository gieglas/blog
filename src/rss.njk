---json
{
  "permalink": "rss.xml",
  "layout": "totallyEmpty.njk",
  "eleventyExcludeFromCollections": true
}
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:dc="http://purl.org/dc/elements/1.1/" xml:base="{{ site.url | addPathPrefixToFullUrl }}" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.localization[locale].title }}</title>
    <link>{{ site.url | addPathPrefixToFullUrl }}</link>
    <atom:link href="{{ site.url | addPathPrefixToFullUrl }}rss.xml" rel="self" type="application/rss+xml" />
    <description>{{ site.localization[locale].description }}</description>
    <language>{{ locale }}</language>
    {%- for post in collections.posts %}
    {%- set absolutePostUrl = post.url | htmlBaseUrl(site.url) %}
    <item>
      <title>{{ post.data.title }}</title>
      <link>{{ absolutePostUrl }}</link>
      <description>{{ post.summary | renderTransforms(post.data.page, metadata.base) }}</description>
      <pubDate>{{ post.date | dateToRfc822 }}</pubDate>
      <dc:creator>{{ site.localization[locale].author }}</dc:creator>
      <guid>{{ absolutePostUrl }}</guid>
    </item>
    {%- endfor %}
  </channel>
</rss>
